<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/c_row_linearLayout_m"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AppBackground"
    android:orientation="vertical">

    <LinearLayout
        android:id="@id/c_row_linearLayout_inner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@id/checkBox_status"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_gravity="right|center"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/checkbox_on"
            android:focusable="false" />

        <View
            android:id="@id/c_row_v1"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:background="@color/Black" />

        <View
            android:id="@id/c_row_v2"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/AppBackground" />

        <View
            android:id="@id/c_row_v3"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/Black" />

        <LinearLayout
            android:id="@id/c_row_data_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@id/task_row_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:maxLines="1"
                android:paddingLeft="2dp"
                android:singleLine="true"
                android:text="task"
                android:textColor="@color/Black" />

            <LinearLayout
                android:id="@id/c_row_2nd_line_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@id/c_row_2nd_line_data_l"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@id/tv_priority_prompt_r"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="@string/priority"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@id/tv_priority_display_r"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:text="value"
                        android:textSize="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@id/c_row_2nd_line_data_r"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">

                    <TextView
                        android:id="@id/tv_enddate_prompt_r"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/taskenddate"
                        android:textSize="10dp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@id/tv_enddate_display_r"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:text="value"
                        android:textSize="10dp"
                        android:textStyle="normal" />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:text="@string/tasktagheading"
                android:textSize="10dp"
                android:textStyle="normal" />
            <TextView
                android:id="@id/tv_tagTask_display_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:text="value"
                android:textSize="10dp"
                android:textStyle="normal" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
